<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns:Table="sap.m.Table" xmlns:footerbar="sap.ushell.ui.footerbar" controllerName="ebs.controller.Worklist">
	<semantic:FullscreenPage id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>worklistViewTitle}">
		<semantic:content>
			<Table id="table" width="auto" class="sapUiResponsiveMargin" items="{ path: '/OnCallListSet',      sorter: { path: 'onCallDate', descending: false, group: '.getOnCallDate' },      groupHeaderFactory: '.getGroupHeader' }" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished" includeItemInSelection="true" delete="onListItemDeleted">
				<headerToolbar>
					<Toolbar>
						<content>
							<Title id="tableHeader" text="{worklistView>/worklistTableTitle}" textAlign="Center" width="100%"/>
							<SearchField placeholder="Search by Name.." id="searchField" search="onSearch" enableSuggestions="true" showRefreshButton="true"/>
						</content>
					</Toolbar>
				</headerToolbar>
				<items>
					<ColumnListItem type="Navigation" press="onTableItemPress">
						<cells>
							<ObjectHeader title="{NameText}" number="{teamId}" id="__header0" titleLevel="Auto" iconDensityAware="false" responsive="true" icon="sap-icon://person-placeholder"/>
						</cells>
					</ColumnListItem>
				</items>
				<columns>
					<Column id="__column0">
						<header>
							<Text id="__text11" visible="false"/>
						</header>
					</Column>
				</columns>
			</Table>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress" tooltip="Feedback"/>
		</semantic:sendEmailAction>
		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>
		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id="shareTile" title="{worklistView>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>
		<semantic:deleteAction>
			<semantic:DeleteAction id="deleteButton" press="onDeleteButtonPressed" tooltip="Delete incorrect Entry"/>
		</semantic:deleteAction>
		<semantic:addAction>
			<semantic:AddAction id="addButton" press="onNewButtonPressed" tooltip="Add On Call Entry"/>
		</semantic:addAction>
		<semantic:sendMessageAction>
		</semantic:sendMessageAction>
	</semantic:FullscreenPage>
</mvc:View>